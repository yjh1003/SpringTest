<?xml version="1.0" encoding="UTF-8"?>

  <!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
 <mapper namespace="com.yjh.test.jsp.dao.SellerDAO">
 	<insert id="insertSeller" parameterType="map">
 		INSERT INTO
 			`seller`
 		(
 			`nickname`
 			, `profileImage`
 			, `temperature`
  			, `createdAt`
  			, `updatedAt`
 		)
 		VALUE
 		(
 			#{nickname}
 			, #{profileImage}
 			, #{temperature}
 			, now()
 			, now()
 		)
 	</insert>
 	
 	<select id="selectLastSeller" resultType="com.yjh.test.jsp.model.Seller">
 		
 		SELECT
 		    `id`
 		 	, `nickname`
 			, `profileImage`
 			, `temperature`
  			, `createdAt`
  			, `updatedAt`
 		FROM
 			`seller`
 		ORDER BY
 			`id` DESC
 		LIMIT
 			1
 			
 	</select>
 	
 	<select id="selectSeller" parameterType="int" 
 	resultType="com.yjh.test.jsp.model.Seller">
 	 		SELECT
 		    `id`
 		 	, `nickname`
 			, `profileImage`
 			, `temperature`
  			, `createdAt`
  			, `updatedAt`
 		FROM
 			`seller`
 		WHERE
 			`id`= #{id}
 				
 	</select>
 </mapper>